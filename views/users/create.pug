extends ../index.pug

block content
  h1 Create new User  
  if (errors)
    each error in errors
      .alert.alert-danger= error
  form(action='/users/create', method='POST')
    .form-group
      label(for='name') Name:
      input#name.form-control(name="name", type='text', value=values ? values.name : "")
    .form-group
        label(for='email') Email:
        input#email.form-control(name="email", type='email', value=values ? values.email : "")
    .form-group
      label(for='password') Password:
      input#password.form-control(name="password", type='password', value=values ? values.password : "")
    .form-group
      label(for='info') Information:
      input#info.form-control(name="info", type='text', value=values ? values.info : "")
    button.btn.btn-primary ADD